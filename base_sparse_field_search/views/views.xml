<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add 'sparse_search' in ir.model.fields form view -->
        <record model="ir.ui.view" id="field_form_view">
            <field name="model">ir.model.fields</field>
            <field name="inherit_id" ref="base_sparse_field.field_form_view"/>
            <field name="arch" type="xml">
                <field name="serialization_field_id" position="after">
                    <field name="sparse_search" attrs="{'invisible': [('serialization_field_id', '=', False)]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
